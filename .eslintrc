{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "tabWidth": 2,
        "useTabs": false,
        "semi": true, // Adiciona ponto e vírgula no final das declarações
        "singleQuote": true, // Usa aspas simples ao invés de aspas duplas
        "printWidth": 80, // Define a largura máxima da linha
        "trailingComma": "es5", // Adiciona vírgula no final de objetos e arrays (es5)
        "bracketSpacing": true, // Adiciona espaço entre chaves em objetos
        "jsxBracketSameLine": false, // Coloca o '>' do JSX na linha seguinte
        "arrowParens": "always" // Sempre coloca parênteses em volta de argumentos de arrow functions
      }
    ],
    "indent": [
      "error",
      2
    ] // ESLint usa 2 espaços para indentação
  }
}